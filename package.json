  "devDependencies": {
    "@types/js-yaml": "^4.0.0",
    "concurrently": "^6.0.0",
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.7",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@octokit/auth-app": "^3.0.0",
    "@octokit/rest": "^18.3.5",
    "@slack/bolt": "^3.3.0",
    "js-yaml": "^4.0.0"
  }
}
