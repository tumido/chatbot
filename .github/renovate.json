{
    "extends": [
        "config:js-app",
        ":gitSignOff",
        "group:allNonMajor",
        "group:linters",
        "group:semantic-releaseMonorepo"
    ],
    "npm": {
        "stabilityDays": 3
    },
    "packageRules": [
        {
            "matchManagers": [
                "kustomize"
            ],
            "enabled": false
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "groupName": "GitHub Actions"
        }
    ]
}
